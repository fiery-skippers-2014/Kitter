<div class="container">
  <h1>Welcome to Kitter!</h1>

  <%= @fail %>
  <!-- CR - refactoring to current_user -->
  <h3>Hello, <%= current_user.full_name%>!</h3>
  <h3>You are signed in as <%= current_user.user_name%>!</h3>
  <img src="http://placekitten.com/80/80" alt="cute kitty">
  <br>



  <!-- <img src="http://www.gravatar.com/avatar/#{@hash}" alt="gravatar"> -->
  <!-- <img src="http://www.gravatar.com/avatar/e764280c3bebba57f2e13509e4f8bb6a.png">
   -->

  What's your excuse? Meow here:
  <form action="/tweet/new" method="post">
  <input type="text" name="input">
  <!-- CR make form fields match database fields (refactored) -->
  <input type="submit"  value="meow">
  </form>
  <br>
  <h4>Your meows:</h4>
<!-- CR refactor  -->
  <% current_user.tweets.each do |tweet|%>
  <img src="http://placekitten.com/80/80" alt="cute kitty"><%="#{tweet.input} at #{time_since_tweet(tweet.created_at)}"%>
  <br>
  <%end%>


  <h4> Other users: </h4>
  <% @all_users.each do |user| %>

  <img src="http://placekitten.com/81/81"><a href="/user/<%=user.user_name%>"><%=user.user_name%></a>
    <form action="/followers/<%= user.user_name %>" method="post">
    <input type="submit" value="Follow me!">
    </form>
  <br>
  <% end %>
<!-- CR this is a lot of logic in the view - a good place for partials. -->
  <br>
  <%if @all_followings != nil%>
    List of were-cats you are following:
    <% @all_followings.each do |person| %>
      <%= person.user_name%> !!
   <% end %>
  <%end%>
  <br>
  <br>
  <%if @all_followers != nil%>
    List of felines who are following you:
    <% @all_followers.each do |person| %>
      <%= person%> ?#?#?
    <% end %>
  <%end%>

  <br>
  <ul>
    <li><a href ="/newsfeed"> Your Kitty Newsfeed</a>
<!--     <li><a href ='/welcome_back'> Your Kitty Home Page</a> -->
    <li><a href='/logout'> Logout </a>
  </ul>
</div>
